{
  "name": "wildcard-match",
  "version": "2.0.1",
  "description": "Check if a string matches a pattern containing * and ** wildcards",
  "author": "Alex Schneider <me@schneider.ax>",
  "repository": "https://github.com/axtgr/wildcard-match",
  "license": "ISC",
  "keywords": [
    "match",
    "wildcard",
    "glob",
    "pattern"
  ],
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint src test",
    "test": "ts-mocha test/**"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test -- -b"
    }
  },
  "lint-staged": {
    "(src|test)/**/*.ts": [
      "eslint --cache --fix"
    ],
    "*.md": "prettier --write"
  },
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.14",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-problems": "^4.0.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mocha": "^8.0.1",
    "prettier": "^2.0.5",
    "ts-mocha": "^7.0.0",
    "typescript": "^3.9.5"
  }
}
